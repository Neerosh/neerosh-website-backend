{
  "version": 2,
  "builds":[
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)",
      "destination": "/" 
    }
  ],
  "headers": [
    {
      "source": "/images/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0, must-revalidate, no-cache, no-store"
        }
      ]
    }
  ]
}